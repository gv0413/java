	ItemEx ie;
	
	public ItemEx() {
		super("ItemEx");
		this.ie =this;
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLayout(new BorderLayout());
		setContentPane(new DrawItem());
		
